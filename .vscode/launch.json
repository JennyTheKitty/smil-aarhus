{
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Node Server",
      "port": 9678,
      "restart": true,
      "outFiles": ["${workspaceFolder}/@app/server/dist/**/*.js"]
    },
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch localhost:3000",
      "url": "http://localhost:3000/",
      "webRoot": "${workspaceFolder}/@app/client/src",
      "pathMapping": {
        "/_next": "${workspaceFolder}/@app/client/.next"
      }
    }
  ]
}
