{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",
    "declarationDir": "dist",
    "types": ["vite/client", "@intlify/vite-plugin-vue-i18n/client"],
    "paths": {
      "~/*": ["src/*"]
    },
    "jsxFactory": "VueJSX"
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.json"
  ],
  "exclude": ["node_modules"]
}
