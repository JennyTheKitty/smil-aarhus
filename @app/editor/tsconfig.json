{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "allowJs": true,
    "lib": ["esnext", "dom"],
    "declarationDir": "dist",
    "declaration": true,
    "rootDir": "./src",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.json"
  ],
  "exclude": ["node_modules"]
}
